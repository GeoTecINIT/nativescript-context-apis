{
	"compilerOptions": {
		"module": "esnext",
    "moduleResolution": "node",
		"target": "ES2017",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noEmitHelpers": true,
		"noEmitOnError": true,
		"skipLibCheck": true,
		"lib": [
			"es6",
			"dom"
		],
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"app/*"
			],
			"*": [
				"./node_modules/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"platforms",
		"../src/node_modules"
	],
	"include": [
		"../src",
		"**/*"
	]
}
